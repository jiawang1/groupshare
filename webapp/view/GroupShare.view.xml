<mvc:View controllerName="fin.confin.con.groupshare.controller.GroupShare" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
	xmlns:semantic="sap.m.semantic" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:fb="sap.ui.comp.filterbar"
	xmlns:smarttable="sap.ui.comp.smarttable" xmlns:table="sap.ui.table">
	<App>
		<pages>
			<semantic:FullscreenPage id="page" semanticRuleSet="Optimized" title="{i18n>title}">
				<l:VerticalLayout xmlns:sap.ui.layout="sap.ui.layout" width="100%" id="__layout0">
					<l:content>
						<smartfilterbar:SmartFilterBar id='smartFilterBar' entitySet="InvestmentActivitys" persistencyKey="SmartFilter_Explored">
							<smartfilterbar:controlConfiguration>
								<smartfilterbar:ControlConfiguration groupId="_BASIC" index="1" key="MyOwnFilterField" visibleInAdvancedArea="true" width="300px">
									<smartfilterbar:customControl>
										<SearchField id="search" placeholder=""/>
									</smartfilterbar:customControl>
								</smartfilterbar:ControlConfiguration>
							</smartfilterbar:controlConfiguration>
							<smartfilterbar:controlConfiguration>
								<smartfilterbar:ControlConfiguration groupId="_BASIC" index="2" key="fiscalYear" visibleInAdvancedArea="true" width="300px">
									<smartfilterbar:customControl>
										<Select id="fiscalYear" visible="true" enabled="true" items="{fiscalYear>/data}">
											<core:ListItem key="{fiscalYear>key}" text="{fiscalYear>value}"/>
										</Select>
									</smartfilterbar:customControl>
								</smartfilterbar:ControlConfiguration>
							</smartfilterbar:controlConfiguration>
						</smartfilterbar:SmartFilterBar>
					</l:content>
				</l:VerticalLayout>
				<IconTabBar id="idIconTabBarNoIcons" class="sapUiResponsiveContentPadding" select="onSwitch">
					<items>
						<IconTabFilter text="{i18n>tabActivity}">
							<smarttable:SmartTable id="ee" entitySet="InvestmentActivitys" smartFilterId="smartFilterBar" header="{i18n>tabActivity}"
								tableType="AnalyticalTable"  showTablePersonalisation="true" enableAutoBinding="true"   beforeRebindTable="onBeforeRebind">
											<smarttable:customToolbar>
												<Toolbar>
													<Title id="title" header="{i18n>tabActivity}"/>
													<ToolbarSpacer/>
													<Button text="New" Type="Transparent" press="onOpenNew"></Button>
													<Button text="Edit" Type="{sap.m.ButtonType.Transparent}"></Button>
													<Button text="Delete" Type="Transparent" press="onDelete"></Button>
												</Toolbar>
										</smarttable:customToolbar>
								<table:AnalyticalTable id="activityList" visibleRowCount="20" showColumnVisibilityMenu="true" selectionMode="MultiToggle"
									 enableColumnFreeze="false" enableCellFilter="true"
									  >
									<table:AnalyticalColumn id="ActivityNumber" label="{i18n>columnAN}" leadingProperty="ActivityNumber" grouped="false">
										<table:template>
											<Text text="{ActivityNumber}"/>
										</table:template>
									</table:AnalyticalColumn>
									<table:AnalyticalColumn id="PostDate" label="{i18n>columnIP}" leadingProperty="PostDate" grouped="false">
										<table:template>
											<Text text="{PostDate}"/>
										</table:template>
									</table:AnalyticalColumn>
									<table:AnalyticalColumn id="InvesterText" label="{i18n>columnCU}" showIfGrouped="true" leadingProperty="InvesterText" grouped="false">
										<table:template>
											<Text text="{InvesterText}"/>
										</table:template>
									</table:AnalyticalColumn>
									<table:AnalyticalColumn id="InvesteeText" label="{i18n>columnIU}" showIfGrouped="true" leadingProperty="InvesteeText" grouped="false">
										<table:template>
											<Text text="{InvesteeText}"/>
										</table:template>
									</table:AnalyticalColumn>
							
									<table:AnalyticalColumn id="DirectInvestPercentage" label="{i18n>columnDI}" leadingProperty="DirectInvestPercentage" 
											 grouped="false">
										<table:template>
											<Text text="{DirectInvestPercentage}" />
										</table:template>
									</table:AnalyticalColumn>
									<table:AnalyticalColumn id="Comments" label="{i18n>columnCS}" showIfGrouped="true" leadingProperty="Comments" grouped="false">
										<table:template>
											<Text text="{Comments}"/>
										</table:template>
									</table:AnalyticalColumn>
								</table:AnalyticalTable>
							</smarttable:SmartTable>




	
						</IconTabFilter>
						<IconTabFilter text="{i18n>tabGroupShare}" id="scopeTab">


	<SplitContainer id="SplitContDemo" initialDetail="detail" initialMaster="master2">
		<detailPages>
			<Page id="detail" title="Detail 1" class="sapUiStdPage">
				<content>
					<Label text="Detail page 1" />
					<Button text="Go to Detail page2" press="onPressNavToDetail" />
				</content>
			</Page>
			<Page id="detailDetail" title="Detail Detail" class="sapUiStdPage" showNavButton="true"
				  navButtonText="Back" navButtonPress="onPressDetailBack">
				<content>
					<VBox class="sapUiSmallMargin">
						<Label text="This is Detail Page2" />
						<Text text="Here you could change the Split Application mode. After the mode change, resize the browser window to see the difference in the master form behaviour." />
						<RadioButtonGroup columns="1" width="500px" class="sapUiMediumMarginBottom" select="onPressModeBtn">
							<buttons>
								<RadioButton id="RB1-1" text="show/hide" selected="true" custom:splitAppMode="ShowHideMode" />
								<RadioButton id="RB1-2" text="stretch/compress" custom:splitAppMode="StretchCompressMode" />
								<RadioButton id="RB1-3" text="hide" custom:splitAppMode="HideMode" />
								<RadioButton id="RB1-4" text="popover" custom:splitAppMode="PopoverMode" />
							</buttons>
						</RadioButtonGroup>
					</VBox>
				</content>
			</Page>
			<Page id="detail2" title="Detail 3 Page" class="sapUiStdPage" showNavButton="true"
				  navButtonText="Back" navButtonPress="onPressDetailBack">
 
				<content>
					<Label text="This is Detail Page3" />
					<Input/>
					<Label text="Label 2" />
					<Input/>
					<Label text="Label 3" />
					<Input/>
					<Label text="Label 4" />
					<Input/>
					<Label text="Label 5" />
					<Input/>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master2" title="Master 2" class="sapUiStdPage">
				<content>
					<Text text="Group share go here ..."/>
					<!--<List itemPress="onListItemPress">
						<items>
							<StandardListItem title="To Detail 1" type="Active" custom:to="detail"/>
							<StandardListItem title="To Detail 2" type="Active" custom:to="detailDetail"/>
							<StandardListItem title="To Detail 3" type="Active" custom:to="detail2"/>
						</items>
					</List>-->
				</content>
			</Page>
		</masterPages>
	</SplitContainer>




						
						</IconTabFilter>
					</items>
				</IconTabBar>
			</semantic:FullscreenPage>
		</pages>
	</App>
</mvc:View>